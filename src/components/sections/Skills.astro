---
    import type { SocialIcon } from "@/types";
    import { skills } from '@/cv';
    import TailwindCss from "@/icons/TailwindCss.astro";
    import Angular from "@/icons/Angular.astro";
    import React from "@/icons/React.astro";
    import AstroIcon from "@/icons/AstroIcon.astro";
    import Bootstrap from "@/icons/Bootstrap.astro";
    import Flask from "@/icons/Flask.astro";
    import Vue from "@/icons/Vue.astro";
    import Html from "@/icons/Html.astro";
    import CSS from "@/icons/CSS.astro";
    import Laravel from "@/icons/Laravel.astro";
    import Spring from "@/icons/Spring.astro";
    import Sass from "@/icons/Sass.astro";
    import Java from "@/icons/Java.astro";
    import JavaScript from "@/icons/JavaScript.astro";
    import TypeScript from "@/icons/TypeScript.astro";
    import Php from "@/icons/Php.astro";
    import Python from "@/icons/Python.astro";
    import MySQL from "@/icons/MySQL.astro";
    import MongoDB from "@/icons/MongoDB.astro";
    import MariaDB from "@/icons/MariaDB.astro";


    const SOCIAL_ICONS: SocialIcon = {
        Angular,
        AstroIcon,
        Bootstrap,
        Vue,
        Html,
        CSS,
        Sass,
        Flask,
        Laravel,
        Spring,
        React,
        TailwindCss,
        Java,
        JavaScript,
        TypeScript,
        Php,
        Python,
        MySQL,
        MongoDB,
        MariaDB
    };
---

<div class="flex flex-wrap items-end justify-around  gap-y-4 lg:gap-4 lg:justify-start">
    {
        skills.map(({name, network, keywords})=>{
            const Icon = SOCIAL_ICONS[network];
            return(
                <div class="flex items-center flex-col border-2 dark:border-white/10 rounded drop-shadow-xl w-32 py-5 border-black/10 dark:bg-[rgba(17,17,17,0.9)] bg-black/20">
                    <Icon class="size-14" />
                    <h3 class="font-bold mt-5">{name}</h3>
                    <p class="flex gap-x-2 rounded-full text-xs  py-1 px-3 dark:bg-gray-900 my-2 dark:text-white/40 bg-white/50">{keywords}</p>
                </div>
            )
        })
    }
</div>